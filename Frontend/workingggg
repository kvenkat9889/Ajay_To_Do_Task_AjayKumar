    <script>
        const API_BASE_URL = 'http://44.223.23.145:3423/api';
        let validationTimeout;

        class WorkAllocationApp {
            constructor() {
                this.touched = {
                    'task-name': false,
                    'employee-name': false,
                    'employee-id': false,
                    'email': false,
                    'description': false,
                    'upload-doc': false,
                    'task-status': false
                };
                this.init();
            }

            init() {
                this.setupValidation();
                this.setupDarkMode();

                const employeeIdInput = this.employeeId;
                const employeeNameInput = this.employeeName;
                const emailInput = this.email;
                const globalError = document.getElementById('global-error');

                try {
                    const userData = JSON.parse(localStorage.getItem('abccompanyempdetails'));
                    if (!userData || !userData.emp_id || !userData.name || !userData.email) {
                        throw new Error('Missing or invalid employee details in localStorage');
                    }

                    // Validate and populate employee ID
                    if (this.validateEmployeeId(userData.emp_id, false)) {
                        employeeIdInput.value = userData.emp_id;
                        employeeIdInput.readOnly = true;
                    } else {
                        throw new Error('Invalid employee ID in localStorage');
                    }

                    // Validate and populate employee name
                    if (this.validateEmployeeName(userData.name, false)) {
                        employeeNameInput.value = userData.name;
                        employeeNameInput.readOnly = true;
                    } else {
                        throw new Error('Invalid employee name in localStorage');
                    }

                    // Validate and populate email
                    if (this.validateEmail(userData.email, false)) {
                        emailInput.value = userData.email;
                        emailInput.readOnly = true;
                    } else {
                        throw new Error('Invalid email in localStorage');
                    }

                    // Fetch data if valid employee ID
                    this.loadWorkItems(employeeIdInput.value.trim());
                    this.loadHistory(employeeIdInput.value.trim());
                } catch (err) {
                    console.error('Error loading employee details:', err);
                    globalError.style.display = 'block';
                }

                // Update submit button state
                this.updateSubmitButton();
            }

            get employeeId() { return document.getElementById('employee-id'); }
            get employeeName() { return document.getElementById('employee-name'); }
            get email() { return document.getElementById('email'); }
            get taskName() { return document.getElementById('task-name'); }
            get description() { return document.getElementById('description'); }
            get uploadDoc() { return document.getElementById('upload-doc'); }
            get taskStatus() { return document.getElementById('task-status'); }
            get workUpdateForm() { return document.getElementById('workUpdateForm'); }

            setupDarkMode() {
                const isDarkMode = localStorage.getItem('darkMode') === 'true';
                document.body.classList.toggle('dark-mode', isDarkMode);
            }

            setupValidation() {
                const inputs = [
                    { id: 'task-name', errorId: 'task-name-error', validate: () => this.validateTaskName() },
                    { id: 'employee-name', errorId: 'employee-name-error', validate: () => this.validateEmployeeName() },
                    { id: 'employee-id', errorId: 'employee-id-error', validate: () => this.validateEmployeeId() },
                    { id: 'email', errorId: 'email-error', validate: () => this.validateEmail() },
                    { id: 'description', errorId: 'description-error', validate: () => this.validateDescription() },
                    { id: 'upload-doc', errorId: 'upload-doc-error', validate: () => this.validateUploadDoc() },
                    { id: 'task-status', errorId: 'task-status-error', validate: () => this.validateTaskStatus() }
                ];

                inputs.forEach(({ id, validate }) => {
                    const input = document.getElementById(id);
                    input.addEventListener('input', () => {
                        this.touched[id] = true;
                        clearTimeout(validationTimeout);
                        validationTimeout = setTimeout(() => {
                            validate();
                            this.updateSubmitButton();
                        }, 500);
                    });
                    input.addEventListener('change', () => {
                        this.touched[id] = true;
                        validate();
                        this.updateSubmitButton();
                    });
                });

                this.workUpdateForm.addEventListener('submit', (e) => this.saveCompletedTask(e));
            }

            validateTaskName(showError = true) {
                if (!this.touched['task-name'] && showError) return true;
                const input = this.taskName;
                const error = document.getElementById('task-name-error');
                const value = input.value;
                const onlySpaces = /^\s*$/;
                const nameRegex = /^[A-Za-z][A-Za-z0-9\s\-_]*[A-Za-z0-9]$/;
                const consecutiveSpaces = /\s{2,}/;
                const leadingTrailingSpaces = /^\s+|\s+$/;
                if (onlySpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'Work Item name is required and cannot be only spaces.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (leadingTrailingSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No leading or trailing spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (consecutiveSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No consecutive spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (value.trim().length < 5) {
                    if (showError) {
                        error.textContent = 'Work Item name must be at least 5 characters long (excluding spaces).';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (value.length > 50) {
                    if (showError) {
                        error.textContent = 'Work Item name cannot exceed 50 characters.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (!nameRegex.test(value)) {
                    if (showError) {
                        error.textContent = 'Invalid Work Item name: Must start with a letter, end with a letter or number, only letters, numbers, spaces, hyphens, underscores.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateEmployeeName(showError = true) {
                if (this.employeeName.readOnly || (!this.touched['employee-name'] && showError)) return true;
                const input = this.employeeName;
                const error = document.getElementById('employee-name-error');
                const value = input.value;
                const onlySpaces = /^\s*$/;
                const nameRegex = /^[A-Za-z]+(?:\.[A-Za-z]+)*(?: [A-Za-z]+)*(?:\.[A-Za-z]+){0,3}$/;
                const consecutiveSpaces = /\s{2,}/;
                const leadingTrailingSpaces = /^\s+|\s+$/;
                if (onlySpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'Employee name is required and cannot be only spaces.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (leadingTrailingSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No leading or trailing spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (consecutiveSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No consecutive spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (value.length < 3) {
                    if (showError) {
                        error.textContent = 'Employee name must be at least 3 characters long.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (value.length > 50) {
                    if (showError) {
                        error.textContent = 'Employee name cannot exceed 50 characters.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (!nameRegex.test(value)) {
                    if (showError) {
                        error.textContent = 'Invalid employee name: Only letters, single spaces, and up to 3 dot-separated suffixes (e.g., John.M.Doe Smith.Jr).';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateEmployeeId(showError = true) {
                if (this.employeeId.readOnly || (!this.touched['employee-id'] && showError)) return true;
                const input = this.employeeId;
                const error = document.getElementById('employee-id-error');
                const value = input.value.trim();
                const onlySpaces = /^\s*$/;
                const idRegex = /^[ATS]{3}0(?!000)[0-9]{3}$/;
                if (onlySpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'Employee ID is required and cannot be only spaces.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (!idRegex.test(value)) {
                    if (showError) {
                        error.textContent = 'Employee ID must be in the format ATS0xxx.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateEmail(showError = true) {
                if (this.email.readOnly || (!this.touched['email'] && showError)) return true;
                const input = this.email;
                const error = document.getElementById('email-error');
                const value = input.value.trim();
                const onlySpaces = /^\s*$/;
                const emailRegex = /^[a-zA-Z0-9._]{3,50}@gmail\.com$/;
                if (onlySpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'Email is required and cannot be only spaces.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (!emailRegex.test(value)) {
                    if (showError) {
                        error.textContent = 'Email must be 3-50 characters before @gmail.com, no special characters except dots/underscores.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateDescription(showError = true) {
                if (!this.touched['description'] && showError) return true;
                const input = this.description;
                const error = document.getElementById('description-error');
                const value = input.value;
                const onlySpaces = /^\s*$/;
                const descRegex = /^[A-Za-z][A-Za-z0-9\s,.]*[A-Za-z0-9]$/;
                const consecutiveSpaces = /\s{2,}/;
                const leadingTrailingSpaces = /^\s+|\s+$/;
                const invalidConsecutive = /(,{2,}|\.{2,}|,\s,|\.\s\.|,\s\.|\.\s,)/;
                if (onlySpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'Description is required and cannot be only spaces.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (leadingTrailingSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No leading or trailing spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (consecutiveSpaces.test(value)) {
                    if (showError) {
                        error.textContent = 'No consecutive spaces allowed.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (value.length > 200) {
                    if (showError) {
                        error.textContent = 'Description cannot exceed 200 characters.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (!descRegex.test(value)) {
                    if (showError) {
                        error.textContent = 'Invalid description: Must start with a letter, end with a letter or number, only letters, numbers, spaces, commas, periods.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                if (invalidConsecutive.test(value)) {
                    if (showError) {
                        error.textContent = 'No consecutive commas, periods, or invalid punctuation patterns.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateUploadDoc(showError = true) {
                if (!this.touched['upload-doc'] && showError) return true;
                const input = this.uploadDoc;
                const error = document.getElementById('upload-doc-error');
                const files = input.files;
                if (files.length === 0) {
                    if (showError) {
                        error.textContent = 'Please upload a file.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                const validTypes = [
                    'application/pdf',
                    'application/msword',
                    'application/vnd.openxmlformats-officedocument.wordprocessingml.document',
                    'image/jpeg',
                    'image/png',
                    'text/plain'
                ];
                for (const file of files) {
                    if (!validTypes.includes(file.type)) {
                        if (showError) {
                            error.textContent = 'Only PDF, DOC, DOCX, JPG, JPEG, PNG, or TXT files allowed.';
                            error.style.display = 'block';
                        }
                        return false;
                    }
                    if (file.size > 5 * 1024 * 1024) {
                        if (showError) {
                            error.textContent = 'Each file must be under 5MB.';
                            error.style.display = 'block';
                        }
                        return false;
                    }
                }
                error.style.display = 'none';
                return true;
            }

            validateTaskStatus(showError = true) {
                if (!this.touched['task-status'] && showError) return true;
                const input = this.taskStatus;
                const error = document.getElementById('task-status-error');
                const value = input.value;
                if (!value) {
                    if (showError) {
                        error.textContent = 'Please select a work status.';
                        error.style.display = 'block';
                    }
                    return false;
                }
                error.style.display = 'none';
                return true;
            }

            validateAllFields() {
                return [
                    this.validateTaskName(),
                    this.validateEmployeeName(),
                    this.validateEmployeeId(),
                    this.validateEmail(),
                    this.validateDescription(),
                    this.validateUploadDoc(),
                    this.validateTaskStatus()
                ].every(valid => valid);
            }

            updateSubmitButton() {
                const submitButton = this.workUpdateForm.querySelector('button[type="submit"]');
                submitButton.disabled = !this.validateAllFields();
            }

            async loadWorkItems(empId = null) {
                const container = document.getElementById('workItemsContainer');
                container.innerHTML = `
                    <div class="empty-state">
                        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="Loading">
                        <h3>Loading work items...</h3>
                    </div>
                `;
                try {
                    const response = await fetch(`${API_BASE_URL}/tasks`, {
                        headers: { 'Accept': 'application/json' },
                        mode: 'cors'
                    });
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    let tasks = await response.json();
                    if (empId) {
                        tasks = tasks.filter(task => task.employee_id === empId);
                    }
                    if (!Array.isArray(tasks) || tasks.length === 0) {
                        container.innerHTML = `
                            <div class="empty-state">
                                <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="No work items">
                                <h3>No work items assigned</h3>
                                <p>You currently don't have any assigned work items</p>
                            </div>
                        `;
                        return;
                    }
                    container.innerHTML = '';
                    tasks.forEach(task => {
                        const workCard = document.createElement('div');
                        workCard.className = 'work-card';
                        let statusBadge = '';
                        const status = task.status || 'assigned';
                        if (status === 'pending') {
                            statusBadge = '<span class="status-badge status-pending">Pending</span>';
                        } else if (status === 'inprocess') {
                            statusBadge = '<span class="status-badge status-inprocess">In Process</span>';
                        } else if (status === 'completed') {
                            statusBadge = '<span class="status-badge status-completed">Completed</span>';
                        } else {
                            statusBadge = '<span class="status-badge status-assigned">Assigned</span>';
                        }
                        workCard.innerHTML = `
                            ${statusBadge}
                            <div class="work-project">HRMS Portal</div>
                            <h3 class="work-title">${task.task_name}</h3>
                            <div class="work-data">
                                <div><i>📅</i> Assigned: ${task.allocated_date ? this.formatDate(task.allocated_date) : 'Not set'}</div>
                                <div><i>⏰</i> Deadline: ${task.deadline ? this.formatDate(task.deadline) : 'Not set'}</div>
                            </div>
                        `;
                        container.appendChild(workCard);
                    });
                } catch (err) {
                    console.error('Error loading work items:', err);
                    container.innerHTML = `
                        <div class="empty-state">
                            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="No work items">
                            <h3>Error loading work items</h3>
                            <p>Unable to load assigned work items: ${err.message}</p>
                        </div>
                    `;
                }
            }

            async loadHistory(empId = null) {
                const historyContainer = document.getElementById('workHistoryContainer');
                historyContainer.innerHTML = `
                    <div class="empty-state">
                        <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="Loading">
                        <h3>Loading work history...</h3>
                    </div>
                `;
                try {
                    const response = await fetch(`${API_BASE_URL}/task-history`, {
                        headers: { 'Accept': 'application/json' },
                        mode: 'cors'
                    });
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    let taskHistory = await response.json();
                    if (empId) {
                        taskHistory = taskHistory.filter(task => task.employee_id === empId);
                    }
                    if (!Array.isArray(taskHistory) || taskHistory.length === 0) {
                        historyContainer.innerHTML = `
                            <div class="empty-state">
                                <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="No history">
                                <h3>No work history yet</h3>
                                <p>Your submitted work updates will appear here</p>
                            </div>
                        `;
                        return;
                    }
                    historyContainer.innerHTML = '';
                    taskHistory.forEach(task => {
                        const historyItem = document.createElement('div');
                        historyItem.className = 'history-item';
                        let statusClass = '';
                        let statusText = '';
                        if (task.task_status === 'inprocess') {
                            statusClass = 'status-inprocess';
                            statusText = 'In Process';
                        } else if (task.task_status === 'completed') {
                            statusClass = 'status-completed';
                            statusText = 'Completed';
                        } else {
                            statusClass = 'status-pending';
                            statusText = 'Pending';
                        }
                        historyItem.innerHTML = `
                            <div class="history-info">
                                <h4>${task.task_name}</h4>
                                <p>HRMS Portal • ${task.employee_name} (${task.employee_id})</p>
                                <span class="status-badge ${statusClass}">${statusText}</span>
                            </div>
                            <div class="history-date">${this.formatDate(task.allocated_time)}</div>
                        `;
                        historyContainer.appendChild(historyItem);
                    });
                } catch (err) {
                    console.error('Error loading history:', err);
                    historyContainer.innerHTML = `
                        <div class="empty-state">
                            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" alt="No history">
                            <h3>Error loading history</h3>
                            <p>Unable to load work history: ${err.message}</p>
                        </div>
                    `;
                }
            }

            async saveCompletedTask(event) {
                event.preventDefault();
                if (!this.validateAllFields()) {
                    return;
                }
                const form = this.workUpdateForm;
                const submitButton = form.querySelector('button[type="submit"]');
                submitButton.disabled = true;
                submitButton.textContent = 'Submitting...';

                const formData = new FormData(form);
                formData.set('taskName', this.taskName.value.trim());
                formData.set('employeeName', this.employeeName.value.trim());
                formData.set('employeeId', this.employeeId.value.trim());
                formData.set('email', this.email.value.trim());
                formData.set('description', this.description.value.trim());

                try {
                    const response = await fetch(`${API_BASE_URL}/task-history`, {
                        method: 'POST',
                        body: formData,
                        headers: { 'Accept': 'application/json' },
                        mode: 'cors'
                    });
                    if (!response.ok) {
                        const errorData = await response.json();
                        throw new Error(errorData.error || `HTTP error! Status: ${response.status}`);
                    }
                    const result = await response.json();
                    form.reset();
                    Object.keys(this.touched).forEach(key => this.touched[key] = false);
                    this.clearErrors();
                    await this.loadWorkItems(this.employeeId.readOnly ? this.employeeId.value.trim() : null);
                    await this.loadHistory(this.employeeId.readOnly ? this.employeeId.value.trim() : null);
                    alert('Work update submitted successfully!');
                    this.updateSubmitButton();
                } catch (err) {
                    console.error('Error submitting work update:', err);
                    alert(`Error submitting work update: ${err.message}`);
                } finally {
                    submitButton.disabled = !this.validateAllFields();
                    submitButton.textContent = 'Submit Work Update';
                }
            }

            clearErrors() {
                const errors = document.querySelectorAll('.error-message');
                errors.forEach(error => error.style.display = 'none');
            }

            formatDate(dateString) {
                if (!dateString) return 'Invalid date';
                const options = { year: 'numeric', month: 'short', day: 'numeric' };
                try {
                    return new Date(dateString).toLocaleDateString('en-US', options);
                } catch (e) {
                    return 'Invalid date';
                }
            }
        }

        const app = new WorkAllocationApp();
    </script>
</body>
</html>